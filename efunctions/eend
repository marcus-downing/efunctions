P=${1:-0}
[ "$2" != "" ] && MSG="$(echo $@ | cut -d ' ' -f 2-)" || MSG=""

eval $(eval_ecolors)

if [ "$P" -ne 0 ]
then
  if [ "$MSG" != "" ]
  then
    eerror "$MSG"
  fi
fi

if [ ! -z "$GOOD" ] ; then
	COLS=$(tput cols)
	COLS=$(($COLS - 7))
	tput ll
	tput cuu1
	tput cuf $COLS
fi

echo -n "${BRACKET}["

if [ "$P" -eq 0 ]
then
  echo -n "${GOOD} ok"
else
  echo -n "${BAD} !!"
fi
echo " ${BRACKET}]${NORMAL} "

if [ ! -z "$GOOD" ] ; then
	tput sgr0
	tput ll
fi

exit $P
